#!/bin/bash

set -e

tna-build-common

echo "Running tna-build for Python Django...";

DEBUG=$(echo "$DEBUG" | tr '[:upper:]' '[:lower:]')
if [ "$DEBUG" == "true" ]
then
  poetry add django-debug-toolbar
fi

poetry run python /app/manage.py collectstatic --no-input --clear || echo "'django.contrib.staticfiles' is not defined in 'INSTALLED_APPS'"
