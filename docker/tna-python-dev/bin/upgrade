#!/bin/bash

cd /app || return

if [ -z "$1" ] || [ $1 == "poetry" ]; then
  echo "Upgrading Poetry dependencies..."
  poetry update
fi

if [ -z "$1" ] || [ $1 == "npm" ]; then
  echo "Upgrading npm dependencies..."
  . "$HOME/.nvm/nvm.sh"
  if [ -f "/app/.nvmrc" ]
  then
    nvm install
  else
    nvm use default
  fi
  npm update
fi
