#!/bin/bash

cd /app || return

poetry install --no-root --with dev || true

if [ -f "/app/package.json" ]
then
  . tna-nvm
  npm install -g prettier@3.5.3 eslint@8.56.0 stylelint@16.20.0 stylelint-config-standard-scss@15.0.1 stylelint-selector-bem-pattern@4.0.1 stylelint-order@7.0.0
  npm install
fi

if [ -d "/home/app/.local/bin/tasks" ]
then
  chmod +x -fR /home/app/.local/bin/tasks
fi

echo "                  ,--.    ,--.            .-------------------------------."
echo "                 ((O ))--((O ))           |                               |"
echo "               ,'_\`--'____\`--'_\`.         |   Awaiting your command...    |"
echo "              _:  ____________  :_        |   Run \"help\" to get started   |"
echo "             | | ||::::::::::|| | |       |                               |"
echo "             | | ||::::::::::|| | |       | .-----------------------------'"
echo "             |_| |/__________\\| |_|       |/"
echo "               |________________|"
echo "            __..-'            \`-..__"
echo "         .-| : .----------------. : |-."
echo "       ,\\ || | |\\______________/| | || /."
echo "      /\`.\\:| | ||  __  __  __  || | |;/,'\\"
echo "     :\`-._\\;.| || '--''--''--' || |,:/_.-':"
echo "     |    :  | || .----------. || |  :    |"
echo "     |    |  | || '- TNABOT -' || |  |    |"
echo "     |    |  | ||   _   _   _  || |  |    |"
echo "     :,--.;  | ||  (_) (_) (_) || |  :,--.;"
echo "     (\`-'|)  | ||______________|| |  (|\`-')"
echo "      \`--'   | |/______________\\| |   \`--'"
echo "             |____________________|"
echo "              \`.________________,'"
echo "               (_______)(_______)"
echo "               (_______)(_______)"
echo "               (_______)(_______)"
echo "               (_______)(_______)"
echo "              |        ||        |"
echo "              '--------''--------'"

touch /tmp/up

tail -f /dev/null
