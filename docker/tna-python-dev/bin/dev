#!/bin/bash

poetry install --no-root --with dev || true
python -m pip install --quiet black==24.10.0 flake8==7.1.0 isort==5.13.2

cd /app || return

. "$HOME/.nvm/nvm.sh"
if [ -f "/app/.nvmrc" ]
then
  nvm install
else
  nvm use lts/iron
fi
npm install -g prettier@3.3.3 eslint@8.56.0 stylelint@16.10.0 stylelint-config-standard-scss@13.1.0 stylelint-selector-bem-pattern@4.0.1

welcome
