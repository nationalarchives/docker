#!/bin/bash

set -e

if [ -z "$1" ]
then
  echo -e "Error: script not specified in tna-node\n";
  echo "PARAMETERS"
  echo "  script               the Node script you want to run"
  echo "                       Example: tna-node dev";
  exit 1
fi

if [ ! -f "/app/package.json" ]
then
  echo "package.json does not exist";
  exit 1
fi

tna-npm install
tna-npm run "$1"
