#!/bin/bash

set -e

echo "Running tna-clean..."

echo "Removing node_modules..."
rm -fR /app/node_modules

echo "Removing npm and nvm from home directory..."
rm -fR /home/app/.npm /home/app/.nvm

echo "Removing TNA scripts..."
rm -f /home/app/.local/bin/tna-build
rm -f /home/app/.local/bin/tna-node
rm -f /home/app/.local/bin/tna-nvm
